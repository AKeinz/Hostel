<Window x:Class="View.Service"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:Logic="clr-namespace:Logic;assembly=Logic"
        
        mc:Ignorable="d"
        Title="Окно сотрудников гостиницы" Height="450" Width="800" MinWidth="800" MinHeight="450">
    <Grid Style="{StaticResource TabColor}">
        <TabControl BorderThickness="0,0,0,0">

            <TabItem Header="Главная">
                <Grid>
                    <Grid Style="{StaticResource SearchColor}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="11*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label Content="Поиск комнаты" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBox HorizontalAlignment="Left" Margin="117,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="482" Grid.Row="1"/>
                            <Button Content="Найти" HorizontalAlignment="Left" Margin="646,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="93" Style="{StaticResource SearchButtonColor}"/>
                        </Grid>
                        <Grid Grid.Row="1" Style="{StaticResource BodyColor}">
                            <ScrollViewer>
                                <StackPanel>

                                    <ItemsControl x:Name="roomsGrid" ItemsSource="{Binding Rooms}" HorizontalAlignment="Center" Padding="0,20,0,0">

                                        <ItemsControl.DataContext>
                                            <Logic:RoomsLogic></Logic:RoomsLogic>
                                        </ItemsControl.DataContext>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical" Margin="5">
                                                    <Border BorderBrush="Black" BorderThickness="1" Background="White" Margin="5" Width="230" Height="200">
                                                        <Image Source="{Binding Photo}"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Room_number, StringFormat='Комната №{0}'}" Margin="0,0,0,2" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                    </Grid>
                </Grid>
            </TabItem>


            <TabItem Header="Неисправности">
                <Grid>
                    <Grid Style="{StaticResource SearchColor}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="11*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label Content="Поиск неисправности" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
                            <TextBox HorizontalAlignment="Left" Margin="165,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="434"/>
                            <Button Content="Найти" HorizontalAlignment="Left" Margin="646,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="93" Style="{StaticResource SearchButtonColor}"/>
                        </Grid>
                        <Grid Grid.Row="1" Style="{StaticResource BodyColor}">
                            <ScrollViewer>
                                <StackPanel>
                                    <Button Content="Добавить неисправность" Width="220" Height="35" Margin="0,20,30,0" HorizontalAlignment="Right"/>

                                    <ItemsControl x:Name="problemsGrid" ItemsSource="{Binding Problems}" HorizontalAlignment="Center" Padding="0,0,0,0" Height="220">

                                        <ItemsControl.DataContext>
                                            <Logic:ProblemsLogic/>
                                        </ItemsControl.DataContext>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Height="224" Width="694">
                                                    <TextBlock Text="{Binding Id, StringFormat='Неисправность №{0}'}" Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Room, StringFormat='Комната: {0}'}" Margin="0,0,0,8" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding User, StringFormat='Отправитель: {0}'}" Margin="0,0,0,8"/>
                                                    <TextBlock Background="White" Text="{Binding Description}" Margin="0,0,0,8" Height="100"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                        <TextBlock Text="{Binding Status, StringFormat='Текущий статус: {0}'}" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                                                        <Grid Width="300"></Grid>
                                                        <Button Content="Изменить" Height="25" Width="250" />
                                                    </StackPanel>
                                                    <Grid Height="10"></Grid>
                                                    <Line X1="10" X2="680" Stroke="#FF4C5A62" Margin="0,0,0,50" StrokeThickness="1"></Line>
                                                </StackPanel>

                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                    </Grid>
                </Grid>
            </TabItem>


            <TabItem Header="Перс. данные">
                <Grid Style="{StaticResource BodyColor}">
                    <Grid x:Name="UserGrid" Margin="59,42,52,45" Background="White">
                        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="1" Margin="0,39,0,0" VerticalAlignment="Top" Width="683"/>
                        <Label Content="Пользователь №" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="156" HorizontalContentAlignment="Center"/>
                        <Label Content="{Binding User.Id}" HorizontalAlignment="Left" Margin="388,5,0,0" VerticalAlignment="Top" Height="24" Width="32"/>
                        <TextBox Text="{Binding User.Lastname}" HorizontalAlignment="Left" Margin="92,93,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" IsReadOnly="True" />
                        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="27,89,0,0" VerticalAlignment="Top"/>
                        <TextBox Text="{Binding User.Firstname}" HorizontalAlignment="Left" Margin="65,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177" IsReadOnly="True"/>
                        <Label Content="Имя" HorizontalAlignment="Left" Margin="27,120,0,0" VerticalAlignment="Top"/>
                        <TextBox Text="{Binding User.Patronymic}" HorizontalAlignment="Left" Margin="93,155,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="149" IsReadOnly="True"/>
                        <Label Content="Отчество" HorizontalAlignment="Left" Margin="27,151,0,0" VerticalAlignment="Top"/>
                        <TextBox Text="{Binding User.Phone}" HorizontalAlignment="Left" Margin="93,186,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="149" IsReadOnly="True"/>
                        <Label Content="Телефон" HorizontalAlignment="Left" Margin="27,182,0,0" VerticalAlignment="Top"/>
                        <TextBox Text="{Binding User.Role}" HorizontalAlignment="Left" Margin="65,217,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="177" IsReadOnly="True"/>
                        <Label Content="Роль" HorizontalAlignment="Left" Margin="27,213,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Grid >
                        <Button Click="Button_Click" Content="Выход" Background="{x:Null}" BorderThickness="0"/>
                    </Grid>
                </TabItem.Header>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
